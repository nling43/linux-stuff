set $mod Mod4

# Autostart
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock-fancy
exec --no-startup-id nm-applet
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id blueman-applet 
exec --no-startup-id protonvpn-cli connect --fastest 
exec --no-startup-id thunderbird
exec --no-startup-id dunst 
exec --no-startup-id powerprofilesctl set power-saver 

# set wallpaper
exec --no-startup-id sleep 2 && nitrogen --restore

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status


bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioStop exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next


# Use pactl to adjust backlight with in brightnessctl.

bindsym XF86MonBrightnessUp exec brightnessctl -c backlight s +5%
bindsym XF86MonBrightnessDown exec brightnessctl -c backlight s 5%-

bindsym $mod+F12 exec brightnessctl -c backlight s +5%
bindsym $mod+F11 exec brightnessctl -c backlight s 5%-


# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
	bindsym $mod+t exec alacritty


# kill 
	bindsym $mod+q kill
	bindsym $mod+Shift+q  focus parent,kill
# redshift 
	bindsym $mod+r exec --no-startup-id  $HOME/.config/i3/redshift-toggle.sh


# start a program launcher
	bindsym $mod+Shift+Return exec --no-startup-id dmenu_run
	bindsym $mod+Return exec rofi -modi drun -show drun \
		-config ~/.config/rofi/rofidmenu.rasi
	bindsym $mod+b exec $HOME/.config/rofi/rofi-bluetooth/rofi-bluetooth
	bindsym $mod+i exec $HOME/.config/rofi/rofi-network-manager/rofi-network-manager.sh
    bindsym $mod+Escape exec $HOME/.config/rofi/powermenu
    bindsym $mod+p exec $HOME/.config/rofi/power-profiles

# change focus
	bindsym $mod+Left focus left
	bindsym $mod+Down focus down
	bindsym $mod+Up focus up
	bindsym $mod+Right focus right

# resize focused window
	bindsym $mod+Ctrl+Left  resize shrink width 10 px or 10 ppt
    bindsym $mod+Ctrl+Up resize grow height 10 px or 10 ppt
    bindsym $mod+Ctrl+Down resize shrink height 10 px or 10 ppt
    bindsym $mod+Ctrl+Right resize grow width 10 px or 10 ppt

# move focused window
	bindsym $mod+Shift+Left move left
	bindsym $mod+Shift+Down move down
	bindsym $mod+Shift+Up move up
	bindsym $mod+Shift+Right move right




# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle


# toggle tiling / floating
bindsym $mod+space floating toggle


# switch to workspace

bindsym $mod+1 workspace  1
bindsym $mod+2 workspace  2
bindsym $mod+3 workspace  3
bindsym $mod+4 workspace  4
bindsym $mod+5 workspace  5
bindsym $mod+6 workspace  6

# move focused container to workspace

bindsym $mod+Shift+1 move container to workspace 1, workspace  1
bindsym $mod+Shift+2 move container to workspace 2, workspace  2
bindsym $mod+Shift+3 move container to workspace 3, workspace  3
bindsym $mod+Shift+4 move container to workspace 4, workspace  4
bindsym $mod+Shift+5 move container to workspace 5, workspace  5
bindsym $mod+Shift+6 move container to workspace 6, workspace  6


# class                  border      backgr. text    indic.   child_border
 client.focused          #f00000  #f00000      #ffffff    #f00000
 client.focused_inactive #000000 #000000     #ffffff    #000000
 client.unfocused        #f00000  #000000     #ffffff   #000000
 client.urgent           #f00000  #000000     #ffffff   #f00000
 client.placeholder      #f00000 #000000     #ffffff   #000000
 client.background       #2B2C2B

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+x exec  --no-startup-id i3lock-fancy-multimonitor -p
bindsym $mod+Shift+x exec --no-startup-id i3lock-fancy-multimonitor -p
# Configure border style <normal|1pixel|pixel xx|none|pixel>
default_border pixel 1

assign [class="Thunderbird"] 6
assign [class="corectrl"] 6
for_window [class="Alacritty"] floating enable
for_window [class="Nemo"] floating enable
for_window [window_role="About"] floating enable

exec_always --no-startup-id $HOME/.config/polybar/launch.sh
